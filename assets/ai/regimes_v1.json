{
  "version": "1.0",
  "rules": [
    {
      "id": "trend_up",
      "name": "Uptrend",
      "logic": [
        "Price > EMA200",
        "EMA50>EMA200",
        "HH/HL structure ≥ 3 swings"
      ]
    },
    {
      "id": "trend_down",
      "name": "Downtrend",
      "logic": [
        "Price < EMA200",
        "EMA50<EMA200",
        "LH/LL structure ≥ 3 swings"
      ]
    },
    {
      "id": "range",
      "name": "Range",
      "logic": [
        "Choppiness Index > 61.8 or ADX < 20",
        "BB width p20-60"
      ]
    },
    {
      "id": "high_vol",
      "name": "High Volatility",
      "logic": [
        "ATR percentile > 80"
      ]
    },
    {
      "id": "low_liq",
      "name": "Low Liquidity",
      "logic": [
        "Volume rel MA20 < 70%"
      ]
    }
  ]
}