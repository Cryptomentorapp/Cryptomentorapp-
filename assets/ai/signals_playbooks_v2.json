{
  "version": "2.0",
  "strategies": [
    {
      "id": "RSI_BullDiv_H4",
      "name": "RSI Bullish Divergence (H4)",
      "setup": [
        "RSI(14) < 30",
        "Bullish divergence vs price",
        "Regime: range→up or early uptrend"
      ],
      "entry": [
        "Pin bar/Bullish engulfing",
        "Break micro-structure high"
      ],
      "exit": [
        "TP1=mid of prior range",
        "TP2=Fib 0.382/0.5"
      ],
      "invalidation": "Close dưới swing low",
      "risk": {
        "rr_min": 1.8,
        "size_rule": "fixed_fractional:1%"
      },
      "filters": {
        "atr_pctile": "20-80",
        "vol_rel_ma20": ">=120%",
        "news_lockout_min": 60
      }
    },
    {
      "id": "MACD_Cross_Retest",
      "name": "MACD Cross Up + Retest MA20",
      "setup": [
        "MACD line cắt lên signal",
        "Price > EMA20 sau retest",
        "Regime: trend up or neutral→up"
      ],
      "entry": [
        "Buy on shallow pullback về EMA20/MA20"
      ],
      "exit": [
        "TP=prior swing high",
        "Trail=EMA20"
      ],
      "invalidation": "Close dưới EMA20 mạnh",
      "risk": {
        "rr_min": 1.6,
        "size_rule": "fixed_fractional:1%"
      },
      "filters": {
        "atr_pctile": "20-70",
        "vol_rel_ma20": ">=110%"
      }
    },
    {
      "id": "BB_Squeeze_Breakout",
      "name": "Bollinger Squeeze → Breakout",
      "setup": [
        "BB width p20→p10 (co hẹp)",
        "Breakout cùng volume tăng ≥150% MA20"
      ],
      "entry": [
        "Buy on retest vùng breakout"
      ],
      "exit": [
        "TP1=range height",
        "TP2=move measured"
      ],
      "invalidation": "False break (close trở lại trong band)",
      "risk": {
        "rr_min": 2.0,
        "size_rule": "fixed_fractional:1%"
      },
      "filters": {
        "atr_pctile": "10-40",
        "news_lockout_min": 30
      }
    },
    {
      "id": "Break_SR_Retest",
      "name": "Break S/R + Retest",
      "setup": [
        "Phá kháng cự xác nhận bằng close",
        "Retest vùng vừa phá"
      ],
      "entry": [
        "Buy khi có nến xác nhận tại vùng retest"
      ],
      "exit": [
        "TP=kháng cự tiếp theo"
      ],
      "invalidation": "Close sâu dưới vùng retest",
      "risk": {
        "rr_min": 1.8,
        "size_rule": "fixed_fractional:1%"
      },
      "filters": {
        "vol_rel_ma20": ">=120%"
      }
    },
    {
      "id": "SMC_OB_Long",
      "name": "SMC Order Block Long (cơ bản)",
      "setup": [
        "Chọn OB tăng hợp lệ sau BOS",
        "FVG lấp 50–80%"
      ],
      "entry": [
        "Limit tại rìa OB hoặc confirmation nến"
      ],
      "exit": [
        "TP1=EQ range/previous high",
        "TP2=ext"
      ],
      "invalidation": "Close dưới OB",
      "risk": {
        "rr_min": 2.0
      },
      "filters": {
        "time_of_day": "avoid_high_impact_news"
      }
    }
  ]
}